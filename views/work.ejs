<%- include("partials/header.ejs") %>
<div class="main-container-today">
      <div class="category-selector-container">
        <div class="today-button-container">
            <form action="/today">
                <button class="second-page-button" id="today" formaction="/today">Today</button>
            </form>
        </div>
        <div class="work-button-container">
            <form class="work-button-form" action="/work" method="get">
                <button class="second-page-button second-page-button-active" id="work" formaction="/work">Work</button>
            </form>
        </div>
      </div>
      <div class="current-date-container">
        <div class="current-date-card">
            <div class="current-date"><%= day %>, <%= month %> <%= date %></div>
        </div>
      </div>
      <div class="main-second-page-card-container">
        <div class="main-second-page-card">
            <% if (locals.item) { %>
                <% item.forEach((i) => { %>
                    <div class="right-card-bubble">
                    <div class="bubble-button-container">
                        <button class="bubble-button"></button>
                    </div>
                    <div class="bubble-content-container">
                        <div class="bubble-content-head"><%= i.heading %></div>
                        <div class="bubble-content-description-container">
                            <div class="bubble-content-description"><%= i.description %></div>
                        </div>
                    </div>
                </div>
                <% }) %>     
             <% } %>
        </div>
      </div>
      <!-- add item modal -->
      <div class="modal-card hidden">
        <div class="modal-card-title">
            Add item
        </div>
        <form class="add-item-form" action="/work" method="POST">
            <div class="modal-card-heading-container">
                <div class="modal-card-heading">Heading</div>
                <input class="modal-card-heading-input" name="modal-heading-input" id="modal-heading-input" required>
            </div>
            <div class="modal-card-heading-container">
                <div class="modal-card-heading">Description</div>
                <input class="modal-card-heading-input" name="modal-description-input" id="modal-description-input" required>
            </div>
            <div class="modal-card-button-container">
                <button type="submit" class="add-item-modal second-page-button" id="add-item-modal">Add item</button>
                <button class="second-page-button" id="cancel">Cancel</button>
            </div>
        </form>
      </div>

    <div class="overlay hidden"></div>

      <!-- add item button -->
      <button class="add-item second-page-button" id="item-modal">Add item</button>
</div>
<%- include("partials/footer.ejs") %>